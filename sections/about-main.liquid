<section class="s-about-main" data-scroll-section>
  <div class="s-about-main__bg">
    <picture>
      <source media="(max-width: 768px)" srcset="{{ section.settings.image_mobile | img_url: '' }}">
      <img src="{{ section.settings.image_desktop | img_url: '' }}" alt="About Us" data-scroll-zoom="0.07">
    </picture>
  </div>
  <div class="s-about-main__container" data-parallax-container>
    <div class="container">
      <div class="s-about-main__scroller" id="scroller_container">
        <div class="s-about-main__scroller-img" data-scroll data-scroll-sticky data-scroll-dont-check data-scroll-target="#scroller_container">
          <img src="{{ section.settings.floating_image_desktop | img_url: '' }}" alt="" role="presentation">
        </div>
        <div class="s-about-main__scroller-text">
          {% if section.settings.title != blank %}
            <div class="subtitle">
              <h2>{{ section.settings.title }}</h2>
            </div>
          {% endif %}
          {% if section.settings.description_1 != blank %}
            <div class="s-about-main__scroller-text__inner title-h1">
              
              {{ section.settings.description_1 }}
            </div>
          {% endif %}
          <div class="s-about-main__scroller-img mobile-show">
            <img src="{{ section.settings.floating_image_mobile | img_url: '' }}" alt="" role="presentation">
          </div>
          {% if section.settings.description_2 != blank %}
            <div class="s-about-main__text section-text text-animation" data-scroll data-scroll-call="text-visible">
              {{ section.settings.description_2 }}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="s-about-main__elem elem1" data-parallax data-sensitivity="0.07" data-rotation-sensitivity="0.02" data-scroll-reverse>
        <img src="{{ 's-about-main_elem1.svg' | asset_url }}" alt="" role="presentation">
      </div>
      <div class="s-about-main__elem elem2" data-parallax data-sensitivity="0.04" data-rotation-sensitivity="0.01">
        <img src="{{ 's-about-main_elem1.svg' | asset_url }}" alt="" role="presentation">
      </div>
      <div class="s-about-main__elem elem3" data-parallax data-sensitivity="0.06" data-rotation-sensitivity="0.01" data-scroll-reverse>
        <img src="{{ 's-about-main_elem2.svg' | asset_url }}" alt="" role="presentation">
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "About Main",
  "tag": "div",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description_1",
      "label": "Description 1"
    },
    {
      "type": "richtext",
      "id": "description_2",
      "label": "Description 2"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Hero Image (Mobile)"
    },
    {
      "type": "image_picker",
      "id": "floating_image_desktop",
      "label": "Floating Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "floating_image_mobile",
      "label": "Floating Image (Mobile)"
    }
  ],
  "presets": [
    {
      "name": "About Main"
    }
  ]
}
{% endschema %}
