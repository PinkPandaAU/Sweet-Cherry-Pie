<section class="s-testimonials" data-scroll-section>
  <div class="container">
    <div class="s-testimonials__container">
      <div class="s-testimonials__head">
        {% if section.settings.title != blank %}
          <div class="title-h2 title-animation" data-scroll data-scroll-call="title-visible">
            <h2>{{ section.settings.title }}</h2>
          </div>
        {% endif %}
        <div class="swiper-arrows">
          <button type="button" class="swiper-arrows-prev">
            <span class="s-button s-button--round s-arrow-link">
              <span class="s-arrow-link__ico">
                <img src="{{ 'ico-swiper-arrow.svg' | asset_url }}" alt="<">
                <img src="{{ 'ico-swiper-arrow.svg' | asset_url }}" alt="" role="presentation">
              </span>
            </span>
          </button>
          <button type="button" class="swiper-arrows-next">
            <span class="s-button s-button--round s-arrow-link">
              <span class="s-arrow-link__ico">
                <img src="{{ 'ico-swiper-arrow.svg' | asset_url }}" alt=">">
                <img src="{{ 'ico-swiper-arrow.svg' | asset_url }}" alt="" role="presentation">
              </span>
            </span>
          </button>
        </div>
      </div>
      {% if section.blocks.size > 0 %}
        <div class="s-testimonials__slider swiper" data-pointer-area="DRAG">
          <div class="swiper-wrapper">

            {% for block in section.blocks %}
              <!--<div class="s-instagram__img">
                <img src="{{ block.settings.image | img_url:'' }}" alt="{{ block.settings.image.alt | escape }}">
              </div>-->
                {% render 'testimonial', testimonial: block.settings %}

            {% endfor %}

          </div>
        </div>
      {% endif %}
    </div>

    <div class="s-testimonials__elem elem1" data-parallax data-sensitivity="0.07">
      <img src="{{ section.settings.image_1 | img_url: '' }}" alt="">
    </div>

    <div class="s-testimonials__elem-mobile">
      <div class="s-testimonials__elem elem2" data-parallax data-sensitivity="0.13" data-scroll-reverse>
        <img src="{{ section.settings.image_2 | img_url: '' }}" alt="">
      </div>
      <div class="s-testimonials__elem elem3" data-parallax data-sensitivity="0.04" data-scroll-reverse>
        <img src="{{ section.settings.image_3 | img_url: '' }}" alt="">
      </div>
    </div>

    <div class="s-testimonials__elem elem4" data-parallax data-sensitivity="0.01">
      <img src="{{ section.settings.image_4 | img_url: '' }}" alt="">
    </div>
    <div class="s-testimonials__elem elem5" data-parallax data-sensitivity="0.1">
      <img src="{{ section.settings.image_5 | img_url: '' }}" alt="">
    </div>
    <div class="s-testimonials__elem elem6" data-parallax data-sensitivity="0.05" data-scroll-reverse>
      <img src="{{ section.settings.image_6 | img_url: '' }}" alt="">
    </div>
  </div>
</section>



