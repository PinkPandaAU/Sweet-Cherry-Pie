<section class="s-contacts" data-scroll-section>
  <div class="container">
    <div class="s-contacts__container">
      <div class="s-promo__content">
        <div class="s-breadcrumbs">
          <ul>
            <li><a href="{{ shop.url }}">Home</a></li>
            <li>{{ page_title }}</li>
          </ul>
        </div>
        {% if section.settings.title != blank %}
          <div class="title-epic title-animation" data-scroll data-scroll-call="title-visible">
            <h1>{{ section.settings.title }}</h1>
          </div>
        {% endif %}
        {% if section.settings.body != blank %}
          <div class="s-promo__text section-text text-animation" data-scroll data-scroll-call="text-visible">
            {{ section.settings.body }}</p>
          </div>
        {% endif %}
      </div>
      {% form 'contact', id: 'contact-form', class:"s-contacts__form" %}
        {%- if form.posted_successfully? -%}
            <p class="note"><b>Thanks for contacting us. We'll get back to you as soon as possible.</b></p>
        {%- endif -%}

        {%- if form.posted_successfully? != true -%}
          {{ form.errors | default_errors }}
          <div class="s-contacts__form-row">
            <div class="s-contacts__form-input">
              <div class="s-input s-input--white">
                <label for="firstname">First name</label>
                <input type="text" name="contact[First Name]" id="firstname" placeholder="First name" value="{% if customer %}{{ customer.first_name }}{% endif %}" required>
              </div>
            </div>
            <div class="s-contacts__form-input">
              <div class="s-input s-input--white">
                <label for="firstname">Last name</label>
                <input type="text" name="contact[Last Name]" id="lastname" placeholder="Last name" value="{% if customer %}{{ customer.last_name }}{% endif %}" required>
              </div>
            </div>
          </div>
          <div class="s-contacts__form-row">
            <div class="s-contacts__form-input">
              <div class="s-input s-input--white">
                <label for="phone">Phone</label>
                <input type="tel" name="contact[phone]" id="phone" pattern="[0-9\-]*" placeholder="Phone" value="{% if customer %}{{ customer.phone }}{% endif %}" required>
              </div>
            </div>
            <div class="s-contacts__form-input">
              <div class="s-input s-input--white">
                <label for="email">Email</label>
                <input type="email" name="contact[email]" id="email" placeholder="Email" value="{% if customer %}{{ customer.email }}{% endif %}" required>
              </div>
            </div>
          </div>
          <div class="s-contacts__form-row">
            <div class="s-contacts__form-input">
              <div class="s-input s-input--white">
                <label for="message">Message</label>
                <textarea name="contact[body]" id="message" placeholder="Message"></textarea>
              </div>
            </div>
          </div>
          <div class="s-contacts__form-submit">
            <button type="submit" class="s-button s-button--big s-button--white">
              <span>Submit</span>
            </button>
          </div>
        {%- endif -%}
      {% endform %}
    </div>
    <div class="s-contacts__bottom">
      <a href="mailto:{{ settings.email }}">{{ settings.email }}</a>
      <ul class="s-socials s-socials--black">
