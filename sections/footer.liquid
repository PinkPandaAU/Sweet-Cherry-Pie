<footer class="footer" data-scroll-section>
  <div class="container container--small">
    <div class="footer__container">
      {% form 'contact', id: 'newsletter-form', class:"footer__form", action:"https://sweetcherrypie.us21.list-manage.com/subscribe/post-json?u=2309812fe370368d9e64611ba&id=48131c0f94&f_id=00fca7e1f0" %}
        {% if section.settings.footer_text != blank %}
          <div class="footer__form-title title-h2">
            <h2>{{ section.settings.footer_text }}</h2>
          </div>
        {% endif %}
        <div class="footer__form-input">
          <input type="email" name="EMAIL" id="mce-EMAIL" placeholder="Enter your email" value="{% if customer %}{{ customer.email }}{% endif %}" autocorrect="off" autocapitalize="off" required>
        </div>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups -->
				<div style="position: absolute; left: -5000px;" aria-hidden="true">
					<input type="text" name="b_2309812fe370368d9e64611ba_48131c0f94" tabindex="-1" value=""></input>
					<div class="clear">
						<input type="submit" value="Subscribe" name="subscribe"></input>
					</div>
				</div>
        <div class="footer__form-btn">
          <button class="s-button s-button--transparent s-button--big" type="submit">
            <span id="mc-embedded-subscribe">Subscribe</span>
          </button>
        </div>
        {{ form.errors | default_errors }}
      {% endform %}
       <p style="display: none;" class="footer__success">Successfully Subscribed!</p>
       <p style="display: none;" class="footer__error">There was an error. Please try again later or contact us at <a href="mailto:info@sweetcherrypie.co">info@sweetcherrypie.co</a></p>
      <div class="footer__shop">
        <a href="{{ section.settings.shop_url }}" class="footer__title mobile-hide">
          <h3>Shop</h3>
        </a>

        {% if section.settings.footer_menu_1 != blank %}
            <ul>
              {% for link in section.settings.footer_menu_1.links %}
