<section class="s-results" data-scroll-section>
  <div class="s-results__category">
    <div class="container">
      <div class="s-results__category-container">
        <div class="title-h3 title-animation" data-scroll data-scroll-call="title-visible">
          <h2>Explore by category</h2>
        </div>
        <ul>
          {% for category in blog.all_tags %}
            <li><a href="{{ blog.url }}/tagged/{{ category | handleize }}" class="s-button s-button--transparent"><span>{{ category }}</span></a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

  {% paginate blog.articles by 8 %}

  <div class="s-results__container">

    {%- for article in blog.articles -%}
      {% render 'article-blog', article: article %}
    {% endfor %}

  </div>

  <div class="s-shop-category__pagination">

    {% if paginate.pages > 1 %}
      {% if paginate.parts.size > 0 %}
      <ul class="outline-buttons">
        <li class="prev {% if paginate.previous %}{% else %}not-active{% endif %}">
          
          <a href="{{ paginate.previous.url }}" class="s-button s-button--white s-button--round s-arrow-link">
            <span class="s-arrow-link__ico">
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
                <defs>
                  <clipPath id="clip-path">
                    <rect id="Rectangle_2140" data-name="Rectangle 2140" width="16" height="16" transform="translate(57.934 1235)" fill="#fff" stroke="#707070" stroke-width="1"/>
                  </clipPath>
                </defs>
                <g id="Mask_Group_80" data-name="Mask Group 80" transform="translate(-57.934 -1235)" clip-path="url(#clip-path)">
                  <path id="Path_1477" data-name="Path 1477" d="M6.5,0a6,6,0,0,1-6,6,6,6,0,0,1,6,6" transform="translate(61.5 1237)" fill="none" stroke="#b36b77" stroke-linejoin="bevel" stroke-width="1.5"/>
                </g>
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
                <defs>
                  <clipPath id="clip-path">
                    <rect id="Rectangle_2140" data-name="Rectangle 2140" width="16" height="16" transform="translate(57.934 1235)" fill="#fff" stroke="#707070" stroke-width="1"/>
                  </clipPath>
                </defs>
                <g id="Mask_Group_80" data-name="Mask Group 80" transform="translate(-57.934 -1235)" clip-path="url(#clip-path)">
                  <path id="Path_1477" data-name="Path 1477" d="M6.5,0a6,6,0,0,1-6,6,6,6,0,0,1,6,6" transform="translate(61.5 1237)" fill="none" stroke="#b36b77" stroke-linejoin="bevel" stroke-width="1.5"/>
                </g>
              </svg>
            </span>
          </a>
          
        </li>
        {% for part in paginate.parts %}
        <li class="{%- if part.is_link -%}{% else %}is-active{% endif %}"><a href="{{ part.url }}" class="s-button s-button--white s-button--round s-arrow-link"><span class="s-arrow-link__ico"><span>{{ part.title }}</span><span>{{ part.title }}</span></a></span></li>
        {% endfor %}
        <li class="next {% if paginate.next %}{% else %}not-active{% endif %}">
          <a href="{{ paginate.next.url }}" class="s-button s-button--white s-button--round s-arrow-link">
          <span class="s-arrow-link__ico">
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
                <defs>
                  <clipPath id="clip-path">
                    <rect id="Rectangle_2140" data-name="Rectangle 2140" width="16" height="16" transform="translate(57.934 1235)" fill="#fff" stroke="#707070" stroke-width="1"/>
                  </clipPath>
                </defs>
                <g id="Mask_Group_80" data-name="Mask Group 80" transform="translate(-57.934 -1235)" clip-path="url(#clip-path)">
                  <path id="Path_1477" data-name="Path 1477" d="M6.5,0a6,6,0,0,1-6,6,6,6,0,0,1,6,6" transform="translate(61.5 1237)" fill="none" stroke="#b36b77" stroke-linejoin="bevel" stroke-width="1.5"/>
                </g>
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
                <defs>
                  <clipPath id="clip-path">
                    <rect id="Rectangle_2140" data-name="Rectangle 2140" width="16" height="16" transform="translate(57.934 1235)" fill="#fff" stroke="#707070" stroke-width="1"/>
                  </clipPath>
                </defs>
                <g id="Mask_Group_80" data-name="Mask Group 80" transform="translate(-57.934 -1235)" clip-path="url(#clip-path)">
                  <path id="Path_1477" data-name="Path 1477" d="M6.5,0a6,6,0,0,1-6,6,6,6,0,0,1,6,6" transform="translate(61.5 1237)" fill="none" stroke="#b36b77" stroke-linejoin="bevel" stroke-width="1.5"/>
                </g>
              </svg>
            </span>
          </a>
        </li>
      </ul>
      {% endif %}
    {% endif %}
  </div>

  {% endpaginate %}

</section>


{% schema %}
{
  "name": "Main Blog",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 8,
      "max": 12,
      "step": 2,
      "default": 8,
      "label": "Articles per Page"
    }
  ]
}
{% endschema %}